<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragmentSetWallPaper">

    <ImageView
        android:id="@+id/img_wall_paper"
        android:layout_width="164dp"
        android:layout_height="335dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <RelativeLayout
        android:id="@+id/btn_set_wallpaper"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/v_set_wallpaper"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/install_the"
            android:layout_width="94dp"
            android:layout_height="22dp"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="6sp"
            android:text="Install Theme"
            android:textAppearance="@style/install_the" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>