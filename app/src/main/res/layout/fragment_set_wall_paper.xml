<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragmentSetWallPaper">
    <ImageView
        android:id="@+id/img_wall_paper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ImageView>
    <RelativeLayout
        android:id="@+id/btn_set_wallpaper"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="550dp"
        android:clipToOutline="true"
        android:background="@drawable/v_set_wallpaper"
        >

        <TextView
            android:id="@+id/install_the"
            android:layout_width="94dp"
            android:layout_height="22dp"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="6sp"
            android:text="Install Theme"
            android:textAppearance="@style/install_the"
             />
    </RelativeLayout>

</FrameLayout>