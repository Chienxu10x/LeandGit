<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="403dp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="343dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="143dp"
        android:layout_height="39dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTheme"
            android:layout_width="64dp"
            android:layout_height="26dp"
            android:textSelectHandleRight="@style/themes_main"
            android:gravity="center"
            style="@style/themes_main"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="71dp"
            android:layout_height="14dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_theme_favorite"/>

            <TextView
                android:layout_width="25dp"
                android:layout_height="14dp"
                android:text="4.4k"
                style="@style/k"/>

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/ic_theme_down"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="25dp"
                android:layout_height="14dp"
                android:text="99,9k"
                style="@style/k"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/ic_star"/>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/ic_star"/>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/ic_star"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/ic_star"/>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/ic_star"/>
        </LinearLayout>

        <TextView
            android:layout_width="55dp"
            android:layout_height="14dp"
            android:gravity="center"
            style="@style/ratings"
            android:text="2871 rating"
            android:textSize="8dp"/>

    </GridLayout>

    <RelativeLayout
        android:id="@+id/buttonTheme"
        android:layout_width="99dp"
        android:layout_height="38dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/r_button_theme">
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/get_theme"
            android:layout_width="75dp"
            android:layout_height="22dp"
            android:text="@string/get_theme"
            android:textAppearance="@style/get_theme"
            android:lineSpacingExtra="6sp"
            android:translationY="-2.79sp"
            android:gravity="right|top"/>
    </RelativeLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="343dp"
        android:layout_height="347dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageview_main1"
            android:layout_width="163dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#3A92BA"/>

        <ImageView
            android:id="@+id/imageview_main2"
            android:layout_width="163dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#4BA13C"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>