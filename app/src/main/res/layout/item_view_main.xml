<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="343dp"
    android:layout_height="403dp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="343dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="143dp"
        android:layout_height="39dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTheme"
            android:layout_width="64dp"
            android:layout_height="26dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="71dp"
            android:layout_height="14dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center"
                android:background="@color/gray_text"/>

            <TextView
                android:layout_width="25dp"
                android:layout_height="14dp"
                android:background="@color/blue"/>

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@color/gray_1"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="25dp"
                android:layout_height="14dp"
                android:text=""
                android:background="@color/blue"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="#CC392E"/>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="#1A31B3"/>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="#184F7A"/>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="#23AC31"/>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="#CC392E"/>
        </LinearLayout>

        <TextView
            android:layout_width="55dp"
            android:layout_height="14dp"
            android:gravity="center"
            android:background="#F6F3F6"
            android:text="2871 rating"
            android:textSize="8dp"/>

    </GridLayout>

    <Button
        android:id="@+id/buttonTheme"
        android:layout_width="99dp"
        android:layout_height="38dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="343dp"
        android:layout_height="347dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageview_main1"
            android:layout_width="163dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#3A92BA"/>

        <ImageView
            android:id="@+id/imageview_main2"
            android:layout_width="163dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#4BA13C"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>