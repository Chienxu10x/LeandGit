<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DetailWidgetFragment2">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_widget_2"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:src="@color/white" />

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_1sdp" />
                <ImageView
                    android:id="@+id/iv_widget_3"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:src="@color/white" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="@dimen/_260sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/iv_widget_1"
                    android:layout_width="@dimen/_260sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:src="@color/white" />

            </FrameLayout>

            <ImageView
                android:id="@+id/iv_widget_7"
                android:layout_width="@dimen/_260sdp"
                android:layout_height="@dimen/_240sdp"
                android:layout_gravity="center"
                android:src="@color/white"
                android:layout_marginTop="@dimen/_10sdp" />
            <ImageView
                android:id="@+id/iv_widget_4"
                android:layout_width="@dimen/_260sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_gravity="center"
                android:src="@color/white"
                android:layout_marginTop="@dimen/_10sdp" />
            <ImageView
                android:id="@+id/iv_widget_5"
                android:layout_width="@dimen/_260sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_gravity="center"
                android:src="@color/white"
                android:layout_marginTop="@dimen/_10sdp" />

            <ImageView
                android:id="@+id/iv_widget_6"
                android:layout_width="@dimen/_260sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_gravity="center"
                android:src="@color/white"
                android:layout_marginTop="@dimen/_10sdp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/btnSetWid"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/v_icon_text_install"
        android:layout_marginBottom="12dp"
        android:clipToOutline="true"
        android:gravity="center_horizontal|center_vertical"
        android:lineSpacingExtra="6sp"
        android:text="Install All Widgets"
        android:textAppearance="@style/custom_icon"
        android:translationY="-2.79sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>