<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_113"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <CheckBox
        android:layout_gravity="center_vertical"
        android:checked="false"
        android:enabled="false"
        android:button="@drawable/custom_checkbok_icon"
        android:id="@+id/btn_check"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        />


    <ImageView

        android:layout_marginStart="10dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/iv_icon_material"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/btn_check"/>

    <ImageView
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_icon_material"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="18dp"
        android:id="@+id/imageView4"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/icon_transfer_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="91dp"/>

    <FrameLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/imageView4"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="18dp"
        android:id="@+id/frako"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_plus_blank"/>
        <ImageView
            android:id="@+id/iv_remove"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/r_icon_remove"
            android:layout_gravity="top|end"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/ic_close" />
    </FrameLayout>



    <RelativeLayout
        android:layout_toRightOf="@+id/frako"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:id="@+id/rl_install"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/r_icon_edit">
        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="6dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6dp"
            android:background="@drawable/icon_edit_icon"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_centerVertical="true"
        android:id="@+id/ln_install"
        android:layout_width="67dp"
        android:layout_height="38dp"
        android:layout_gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:background="@drawable/r_icon_button">

        <TextView
            android:id="@+id/install"
            android:layout_width="43dp"
            android:layout_height="22dp"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/install"
            android:textAppearance="@style/install" />
    </RelativeLayout>


</RelativeLayout>

